#include "Other.frer"

[[VertexShader]]
void Vert(in float4 inPosition,
          in float4 inNormal,
          [[Position]] out float4 outPosition,
          out float2 outUV)
{
    outPosition = float4(inPosition.xyz, 1.0f);
    outUV       = float2(inPosition.w, outPosition.w);
}

[[FragmentShader]]
void Frag(in float2 inUV,
          out float4 outColor)
{
    outColor = float4(inUV, 0.0f, 1.0f);
}